<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_tips"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tips_background1"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment">

    <ImageView
        android:id="@+id/flechaizq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tips_left" />

    <ImageView
        android:id="@+id/flechader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dip"
        android:background="@drawable/tips_right" />

</LinearLayout>