<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <item
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:state_pressed="true">

        <shape
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shape="rectangle">

            <corners
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:radius="3dip" />

            <stroke
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="1dip"
                android:color="#36797f" />

            <gradient
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:angle="-90"
                android:endColor="#58a9b7"
                android:startColor="#185c60" />
        </shape>
    </item>

    <item
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:state_focused="true">

        <shape
            android:layout_width="wrap_content"
            android:shape="rectangle">

            <corners android:radius="3dip" />

            <stroke
                android:width="1dip"
                android:color="#36797f" />

            <solid android:color="#308d9e" />
        </shape>
    </item>

    <item>

        <shape android:shape="rectangle">

            <corners android:radius="3dip" />

            <stroke
                android:width="1dip"
                android:color="#36797f" />

            <gradient
                android:angle="-90"
                android:endColor="#308d9e"
                android:startColor="#73c5d3" />
        </shape>
    </item>

</selector>